@{
  ViewData["Title"] = "Home Page";
}

<body class="relative overflow-hidden bg-black">
  <!--splash screen with logo animation-->

  <script src="~/js/splash.js"></script>
  <div id="splash"
    class="fixed inset-0 bg-black flex items-center justify-center z-50 opacity-0 transition-opacity duration-300">
    <img id="logo" src="/images/LogoBlack.svg"
      class="max-h-[80vh] w-auto opacity-0 transition-opacity duration-500 animate-scaleUpSlow" />
  </div>

  <!-- Main content -->
  <div id="site-content" class="hidden">
    <header id="main-header" class="bg-no-repeat bg-cover min-h-screen p-6"
      style="background-image: url('/images/HERO_BACKGROUND.svg '); background-position: top center; font-family: 'Libre Franklin', sans-serif;">

      <div class="flex items-center pt-2">
        <img id="header-logo" src="/images/LogoBlack.svg" alt="Logo" class="h-44 w-44" />

        <nav id="main-nav" class="ml-10">
          <ul class="flex space-x-16 text-white text-3xl">
            <li><a id="nav-games" href="#" class="inline-block hover:scale-125 transition duration-300">ИГРИ</a></li>
            <li><a id="nav-contacts" href="#" class="inline-block hover:scale-125 transition duration-300">КОНТАКТИ</a>
            </li>
            <li><a id="nav-buy" href="#" class="inline-block hover:scale-125 transition duration-300">КУПИ СЕГА</a></li>
          </ul>
        </nav>

        <div id="lang-switch" class="flex text-white text-3xl ml-auto space-x-6 mr-6">
          <div class="flex space-x-1">
            <i class="fas fa-globe"></i>
            <a id="lang-bg" href="#">BG</a>
          </div>
          <a id="lang-en" href="#">EN</a>
        </div>
      </div>

      <div id="hero-text" class="text-white mt-30 pl-5">
        <h2 class="text-4xl font-bold mb-6">СТАНИ ДЕТЕКТИВ</h2>
        <h1 class="text-5xl font-bold mb-8">ГРАДЪТ ТИ ПАЗИ ТАЙНИ </h1>
        <button id="start-investigation" class="text-4xl text-white border-4 border-white p-3 
          hover:text-black hover:bg-white transition duration-300 cursor-pointer">
          ЗАПОЧНИ РАЗСЛЕДВАНЕТО
        </button>
      </div>
    </header>
<main class="flex justify-center items-center  bg-amber-50 p-20">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
    <div class="w-70 h-90 bg-white border-4 border-r-4 ">
    </div>
    <div class="w-70 h-90  shadow-amber-300 border-4 border-r-4 ">
    </div>
    <div class="w-70 h-90 bg-white shadow-2xl shadow-black  ">
    </div>
  </div>
</main>
<footer class="bg-black text-white text-center p-4">  
  <p>&copy; 2023 Quest. All rights reserved.</p>
  </footer>
  </div>
</body>
